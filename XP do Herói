// Solicita ao usuário que insira o nome do herói e a quantidade de XP
var nomeHeroi = prompt("Digite o nome do herói:");
var quantidadeXP = parseInt(prompt("Digite a quantidade de XP do herói:"));

// Utiliza uma estrutura de decisão para determinar o nível com base na quantidade de XP
var nivel;
if (quantidadeXP < 1000) {
    nivel = "Ferro";
} else if (quantidadeXP >= 1001 && quantidadeXP <= 2000) {
    nivel = "Bronze";
} else if (quantidadeXP >= 2001 && quantidadeXP <= 5000) {
    nivel = "Prata";
} else if (quantidadeXP >= 6001 && quantidadeXP <= 7000) {
    nivel = "Ouro";
} else if (quantidadeXP >= 7001 && quantidadeXP <= 8000) {
    nivel = "Platina Diamante";
} else if (quantidadeXP >= 8001 && quantidadeXP <= 9000) {
    nivel = "Ascendente";
} else if (quantidadeXP >= 9001 && quantidadeXP <= 10000) {
    nivel = "Imortal";
} else {
    nivel = "Radiante";
}

// Exibe a mensagem final com o nível, nome e quantidade de XP do herói
console.log("O Herói " + nomeHeroi + " está no nível " + nivel + " com pontuação " + quantidadeXP + ".");
